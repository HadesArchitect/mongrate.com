SOURCE_URL=https://raw.githubusercontent.com/mongrate/mongrate/master/CHANGELOG.md
TARGET=pages/docs/changelog.md

wget $SOURCE_URL -O pages/docs/changelog-body.md \
  --user-agent="https://github.com/mongrate/mongrate.com/blob/master/bin/generate-changelog"

rm $TARGET
cat pages/docs/changelog-header.md >> $TARGET
echo '' >> $TARGET
echo '<!-- THIS PAGE WAS AUTO-GENERATED BY bin/generate-changelog. MANUAL EDITS WILL BE OVERWRITTEN. -->' >> $TARGET
echo "This page was automatically generated from [this file on GitHub](${SOURCE_URL}) on "$(  date +%c --utc ) >> $TARGET
tail -n+3 pages/docs/changelog-body.md >> $TARGET

echo Generated $TARGET;
